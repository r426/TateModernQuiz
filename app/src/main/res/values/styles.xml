<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="BackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/tate</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:paddingLeft">@dimen/paddingSmall</item>
        <item name="android:paddingRight">@dimen/paddingSmall</item>
        <item name="android:requiresFadingEdge">vertical</item>
    </style>

    <style name="IntroText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/paddingSmall</item>
        <item name="android:paddingRight">@dimen/paddingSmall</item>
        <item name="android:paddingTop">@dimen/paddingSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/introText</item>
    </style>

    <style name="EditView">
        <item name="android:layout_width">104sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:hint">year</item>
    </style>

    <style name="Questions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/paddingSmall</item>
        <item name="android:paddingBottom">@dimen/paddingSmall</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="ChoiceButton">
        <item name="android:layout_width">96sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">@dimen/paddingExtraSmall</item>
        <item name="android:paddingBottom">@dimen/paddingExtraSmall</item>
        <item name="android:paddingLeft">@dimen/paddingSmall</item>
        <item name="android:paddingRight">@dimen/paddingSmall</item>
        <item name="android:layout_margin">@dimen/paddingExtraSmall</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:text">choose</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>